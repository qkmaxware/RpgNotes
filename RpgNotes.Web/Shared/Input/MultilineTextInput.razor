<div class="w3-margin-bottom">
    <label>@Label</label>
    <textarea class="w3-input darker" type="text" @bind=Value style="width: 100%;resize: vertical; height: 50vh;"></textarea>
</div>

@code {
    [Parameter] public string Label {get; set;}
    public string Value {get; private set;}

    public void SetValue(string v) {
        this.Value = v;
        StateHasChanged();
    } 
}